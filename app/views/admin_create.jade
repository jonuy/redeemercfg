extend layout
block styles
  link(href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", rel="stylesheet", type="text/css")

block scripts
  script(src="//code.jquery.com/jquery-1.11.0.min.js")
  script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
  script(src="../scripts/admin_create.js")

block page-header
  .container
    h2 Admin - Create a Study

block page-content
  form.form
    .form-group
      label Name:
      input#study-name.form-control
    .form-group
      label Title: 
      input#study-title.form-control
    .form-group
      label Subtitle: 
      input#study-subtitle.form-control
    .form-group
      label Scripture Verse:
      input#scripture-verse.form-control
    .form-group
      label Scripture:
      textarea#scripture-body.form-control

    #section-container
  
  p
    button#add-section.btn.btn-default Add Section

  h3 Preview
  #preview

  p
    button#save.btn.btn-primary SAVE

  #section-template(style="display:none")
    .form-group
      label Section Header:
      input.section-header.form-control
    .form-group
      label Section Body:
      textarea.section-body.form-control